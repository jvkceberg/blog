---
// components/BrandLogo.astro
interface Props {
  brand: string;
  size?: number | string;
  class?: string;
}

const { brand, size = 20, class: className } = Astro.props;

const iconUrl = `https://cdn.simpleicons.org/${brand}`;
---

<div
  role="img"
  aria-label={`${brand} logo`}
  class:list={["brand-icon-mask", className]}
  style={{
    width: `${size}px`,
    height: `${size}px`,
    backgroundColor: "currentColor",
    maskImage: `url(${iconUrl})`,
    maskSize: "contain",
    maskRepeat: "no-repeat",
    maskPosition: "center",
    WebkitMaskImage: `url(${iconUrl})`,
    WebkitMaskSize: "contain",
    WebkitMaskRepeat: "no-repeat",
    WebkitMaskPosition: "center",
  }}
>
</div>

<style>
  .brand-icon-mask {
    display: inline-block;
    vertical-align: middle;
    flex-shrink: 0;
  }
</style>